doctype html
html
  head
    title Book Shelf
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(type='text/css', rel='stylesheet', href='/bg.css')
  body
    .blok
      nav.navbar.navbar-inverse
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') Book Shelf
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                  a(href='/') Home
                if user
                  li
                    a(href='/articles/add') Add Article
            ul.nav.navbar-nav.navbar-right
              if user
                li
                  a(href='/users/logout') Logout
                li
                  img.profile-image.img-circle(src='/mitun.jpg')
              else
                li
                  a(href='/users/register') Register
                li
                  a(href='/users/login') Login
            form.navbar-form(method='POST',action='/article/search', role='search')
                    .input-group
                      input.form-control(type='text', placeholder='Search', name='search')
                      .input-group-btn
                        button.btn.btn-default.search(type='submit')
                          i.glyphicon.glyphicon-search

      .container
          != messages('message', locals)
          if errors
            each error, i in errors
              div(class="alert alert-danger") #{error.msg}
          block content


  script(src='/bower_components/jquery/dist/jquery.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
  script(src='/js/main.js')
